server {
    listen         3400;
    server_name    rewrite.dev;

    rewrite ^(/campaigns)/([^/]*)/?$ $1?status=$2 last;
    rewrite ^(/websites)/([^/]*)/?$ $1?scope=$2 redirect;
    rewrite ^/withdraws/(.*)$ /withdrawals/$1 permanent;

    location / {
        add_header Content-Type text/plain;
        return 200 "args: $args, request_uri: $request_uri";
    }
}
